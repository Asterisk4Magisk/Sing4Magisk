#!/system/bin/sh

inotify=`realpath $0`
scripts_dir=`dirname ${inotify}`
service="${scripts_dir}/sing.service"

events=$1
monitor_dir=$2
monitor_file=$3

start_sing() {
  ${service} start &>> /data/adb/sing/run/service.log &
}

stop_sing() {
  ${tproxy} disable
  ${service} stop
}

main() {
if [ ! -f /data/adb/sing/manual ] ; then
  if [ "${monitor_file}" = "disable" ] ; then
    if [ "${events}" = "d" ] ; then
      start_sing
    elif [ "${events}" = "n" ] ; then
      stop_sing
    fi
  fi
fi
}

main
